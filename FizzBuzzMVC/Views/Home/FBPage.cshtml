@model FizzBuzzMVC.Models.FizzBuzz

<div class="container px-4 py-5">
    <div class="row row-cols-1 row-cols-md-2 g-5 py-5">
        <div class="col">
            <h1 class="display-5 fw-bold lh-1 mb-3">FIZZ BUZZ: A Coding Project</h1>
            <h4 class="lead mb-5">
                When it counts you Fizz Buzz. A Javascript project coding exercise using loops. Write a program that prints the numbers from 1 to 100 and for multiples of '3' display <strong>"Fizz"</strong> instead of the number, and for multiples of "5" display <strong>"Buzz"</strong>. If a multiple of both numbers display <strong>"FizzBuzz".</strong>
            </h4>
            <div class="row border-2 border-top">
                <h1 class="display-6 fw-bold lh-1 mt-2 mb-3">Instructions</h1>
                <p>
                    Enter 2 numbers. The first number will be used to evaluate Fizz.
                    The second number wil be used to evaluate Buzz and FizzBuzz wil be 
                    determined based on the combination of the two numbers.
                </p>
            </div>
        </div>
        <!-- App Logo Goes Here -->
        <div class="col d-flex align-items-center order-first order-md-last">
            <img src="/img/FizzBuzzLogo.svg" class="img-fluid d-block center-block mx-auto" alt="Fizz Buzz Logo">
        </div>
        <div class="col-12 order-last">
            <!-- Form Goes Here -->
            <form asp-controller="Home" asp-action="FBPage" method="post" class="row row-cols-1 row-cols-md-2 gy-3">
                <div class="col form-group">
                    <label asp-for="FizzValue"><h5>Enter Fizz Value</h5></label>
                    <input type="number" class="form-control" asp-for="FizzValue" aria-label="Fizz Value" value="@Model.FizzValue">
                </div>
                <div class="col form-group">
                    <label asp-for="BuzzValue"><h5>Enter Buzz Value</h5></label>
                    <input type="number" class="form-control" asp-for="BuzzValue" aria-label="Buzz Value" value="@Model.BuzzValue">
                </div>
                <div class="col-12 d-flex justify-content-start justify-content-md-end">
                    <button type="submit" class="btn btn-dark" id="btnSubmit">Buzz It.</button>
                </div>
            </form>
            <div class="row mt-5">
                <h1 class="display-6 fw-bold lh-1 border-2 border-bottom">Results</h1>
                <div class="col table-responsive">
                    @*Table Goes Here*@
                    @if (@Model.Result.Count > 0)
                    {
                        <table class="table table-striped table-sm table-hover">
                            <tbody id="results">
                                <!-- Results Go Here -->
                                @for (int i = 0; i < @Model.Result.Count; i += 5)
                                {
                                    <tr>
                                        <td>@Model.Result[i]</td>
                                        <td>@Model.Result[i + 1]</td>
                                        <td>@Model.Result[i + 2]</td>
                                        <td>@Model.Result[i + 3]</td>
                                        <td>@Model.Result[i + 4]</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>